{
  "compilerOptions": {
    "jsx": "react-jsx", // 指定 JSX 编译器为 React
    "emitDecoratorMetadata": true, // 生成装饰器的元数据，用于反射
    "experimentalDecorators": true, // 开启实验性的装饰器语法支持
    "baseUrl": ".", // 设置模块的基础目录，用于解析非相对模块名称
    "paths": {
      // 路径映射，用于在导入模块时快速解析模块的路径
      "@/*": ["./src/*"] // 将 "@/" 映射到 "./src/"
    }
  }
}
